    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: main.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/databricks/main.py",
            "console": "integratedTerminal",
            "args": [
                "--job_path",
                "example_job.py",
                "--example_arg",
                "hello world"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/src/databricks/tests",
                "-v"
            ],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}